{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block stylesheets %}
{#    {{ encore_entry_link_tags('register') }}#}
{% endblock %}

{% block javascripts %}
{#    {{ encore_entry_script_tags('register') }}#}
{% endblock %}

{% block navbar %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <section class="section has-background-primary is-fullheight">
        <div class="container">
            <div class="is-max-w-md mx-auto">
                <div class="mb-6 has-text-centered">
                    <a href="{{ path('homepage')}}" class="svg-bg-transparent">
                        {{ source('@public_path'~asset('/icons/logo-2.svg')) }}
                    </a>
                </div>
                <div class="box has-text-centered py-6 px-5">
                    <span class="subtitle is-spaced">Rejoins la communauté</span>
                    <h4 class="title is-size-3">Créer un compte</h4>
                    <div class="field is-horizontal">
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="text" placeholder="Prénom">
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="text" placeholder="Nom">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="field">
                            <div class="control has-icons-right">
                                <input class="input" type="email" placeholder="name@email.com">
                                <span class="icon is-small is-right">
                                    <svg class="image is-24x24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                    </svg>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control has-icons-right">
                                <input class="input" type="password" placeholder="Mot de passe">
                                <span class="icon is-small is-right">
                                    <svg class="image is-24x24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary is-fullwidth">Sign Up</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="has-text-centered has-text-white">
                    <p>Vous avez un compte ? <a class="has-text-grey-light" href="{{ path('app_login') }}">Connectez-vous</a></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}